{
  "compilerOptions": {
    "target": "es2016",
    "module": "es2015",
    "lib": [
      "es2017",
      "dom",
      "es6"
    ],
    "sourceMap": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "removeComments": false,
    "baseUrl": "./",
    "typeRoots": [
      "src/@types"
    ],
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ]
}
